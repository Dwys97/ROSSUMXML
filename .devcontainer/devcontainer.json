{
  "name": "AWS Serverless App",
  "image": "mcr.microsoft.com/devcontainers/universal:2",
  "features": {
    "ghcr.io/devcontainers/features/aws-cli:1": {},
    // Modified to install pipx automatically
    "ghcr.io/devcontainers/features/python:1": {
      "installTools": true,
      "version": "3.11"
    },
    "ghcr.io/devcontainers/features/git-lfs:1": {},
    "ghcr.io/devcontainers/features/docker-in-docker:2": {}
  },
  "forwardPorts": [
    3000, // Backend API
    5173, // Common frontend port (Vite)
    8080  // Alternative frontend port
  ],
  // Updated command to install dependencies in root, backend, and frontend
  "postCreateCommand": "pipx install aws-sam-cli && npm install && npm install --prefix backend && npm install --prefix frontend",
  // Added command to start both servers when Codespace starts
  "postStartCommand": "npm run dev",
  "customizations": {
    "vscode": {
      "extensions": [
        "AmazonWebServices.aws-toolkit-vscode",
        "dbaeumer.vscode-eslint"
      ]
    }
  }
}
