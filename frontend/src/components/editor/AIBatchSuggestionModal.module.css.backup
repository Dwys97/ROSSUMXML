/* frontend/src/components/editor/AIBatchSuggestionModal.module.css */
/* NOW USING BaseModal - Only content-specific styles remain */

/* Modal Content Container */
.modalContent {
    padding: 0 !important;
    display: flex;
    flex-direction: column;
}

/* Custom Header with AI Icon */
.header {
    display: flex;
    align-items: center;
    gap: 12px;
    width: 100%;
    padding: 30px 30px 20px;
}

.aiIcon {
    width: 28px;
    height: 28px;
    stroke-width: 2;
    flex-shrink: 0;
}

.title {
    margin: 0;
    font-size: 28px;
    font-weight: 600;
    color: #ffffff;
}

.subtitle {
    margin: 4px 0 0 0;
    font-size: 13px;
    opacity: 0.8;
    display: flex;
    align-items: center;
    gap: 4px;
}

.loadingMoreIndicator {
    display: inline-flex;
    align-items: center;
    gap: 4px;
    font-weight: 500;
}

.smallSpinner {
    display: inline-block;
    width: 12px;
    height: 12px;
    border: 2px solid rgba(255, 255, 255, 0.3);
    border-top-color: white;
    border-radius: 50%;
    animation: spin 0.8s linear infinite;
}

.closeButton {
    background: none;
    border: none;
    color: white;
    cursor: pointer;
    padding: 8px;
    border-radius: 6px;
    transition: background 0.2s;
}

.closeButton:hover {
    background: rgba(255, 255, 255, 0.1);
}

.closeButton svg {
    width: 20px;
    height: 20px;
}

/* Batch Actions */
.batchActions {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 16px 24px;
    border-bottom: 1px solid #e5e7eb;
    background: #f9fafb;
}

.selectAllWrapper {
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 14px;
    font-weight: 500;
    color: #374151;
    cursor: pointer;
}

.selectAllWrapper input[type="checkbox"] {
    width: 16px;
    height: 16px;
    accent-color: #1d72f3;
}

.actionButtons {
    display: flex;
    gap: 12px;
}

.regenerateButton,
.acceptSelectedButton,
.acceptAllButton {
    display: flex;
    align-items: center;
    gap: 6px;
    padding: 8px 16px;
    border: none;
    border-radius: 6px;
    font-size: 13px;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.2s;
}

.regenerateButton {
    background: #f3f4f6;
    color: #374151;
    border: 1px solid #d1d5db;
}

.regenerateButton:hover:not(:disabled) {
    background: #e5e7eb;
}

.acceptSelectedButton {
    background: #3b82f6;
    color: white;
}

.acceptSelectedButton:hover:not(:disabled) {
    background: #2563eb;
}

.acceptAllButton {
    background: #059669;
    color: white;
}

.acceptAllButton:hover:not(:disabled) {
    background: #047857;
}

.regenerateButton svg,
.acceptSelectedButton svg,
.acceptAllButton svg {
    width: 14px;
    height: 14px;
}

.spinner {
    width: 14px;
    height: 14px;
    border: 2px solid transparent;
    border-top: 2px solid currentColor;
    border-radius: 50%;
    animation: spin 1s linear infinite;
}

@keyframes spin {
    to { transform: rotate(360deg); }
}

/* Suggestions List */
.suggestionsList {
    flex: 1;
    overflow-y: auto;
    padding: 8px;
}

.suggestionItem {
    border: 1px solid #e5e7eb;
    border-radius: 8px;
    margin-bottom: 12px;
    padding: 16px;
    background: white;
    transition: all 0.2s;
}

.suggestionItem:hover {
    border-color: #d1d5db;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.suggestionItem.selected {
    border-color: #3b82f6;
    background: #f0f9ff;
    box-shadow: 0 0 0 1px #3b82f6;
}

.suggestionHeader {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 12px;
}

.checkboxWrapper {
    display: flex;
    align-items: center;
    gap: 8px;
    cursor: pointer;
}

.checkboxWrapper input[type="checkbox"] {
    width: 16px;
    height: 16px;
    accent-color: #3b82f6;
}

.suggestionIndex {
    font-size: 12px;
    font-weight: 600;
    color: #6b7280;
    background: #f3f4f6;
    padding: 2px 6px;
    border-radius: 4px;
}

.confidenceBadge {
    display: flex;
    align-items: center;
}

.confidenceIndicator {
    padding: 4px 8px;
    border-radius: 12px;
    font-size: 12px;
    font-weight: 600;
    color: white;
}

.confidenceIndicator.high {
    background: #059669;
}

.confidenceIndicator.medium {
    background: #d97706;
}

.confidenceIndicator.low {
    background: #dc2626;
}

/* Mapping Display */
.mappingDisplay {
    display: flex;
    align-items: center;
    gap: 16px;
    margin-bottom: 12px;
    padding: 12px;
    background: #f9fafb;
    border-radius: 6px;
}

.mappingItem {
    flex: 1;
}

.mappingItem label {
    display: block;
    font-size: 11px;
    font-weight: 600;
    color: #6b7280;
    margin-bottom: 6px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

.elementPath {
    background: white;
    border: 1px solid #e5e7eb;
    border-radius: 4px;
    padding: 8px;
    font-family: 'Courier New', monospace;
    font-size: 12px;
}

.elementName {
    font-weight: 600;
    color: #1f2937;
    margin-bottom: 2px;
}

.elementPathText {
    font-size: 10px;
    color: #6b7280;
    font-style: italic;
}

.arrow {
    flex-shrink: 0;
    color: #1d72f3;
}

.arrow svg {
    width: 20px;
    height: 20px;
}

/* Reasoning */
.reasoning {
    margin-bottom: 12px;
}

.reasoning label {
    display: block;
    font-size: 11px;
    font-weight: 600;
    color: #6b7280;
    margin-bottom: 6px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

.reasoning p {
    margin: 0;
    font-size: 13px;
    color: #374151;
    line-height: 1.5;
    background: #f9fafb;
    padding: 10px;
    border-radius: 4px;
    border-left: 3px solid #1d72f3;
}

/* Individual Actions */
.individualActions {
    display: flex;
    gap: 8px;
    justify-content: flex-end;
}

.acceptIndividualButton {
    background: #10b981;
    color: white;
    border: none;
    padding: 6px 12px;
    border-radius: 4px;
    font-size: 12px;
    font-weight: 500;
    cursor: pointer;
    transition: background 0.2s;
}

.acceptIndividualButton:hover:not(:disabled) {
    background: #059669;
}

.regenerateIndividualButton {
    display: flex;
    align-items: center;
    gap: 4px;
    background: #1d72f3;
    color: white;
    border: none;
    padding: 6px 12px;
    border-radius: 4px;
    font-size: 12px;
    font-weight: 500;
    cursor: pointer;
    transition: background 0.2s;
}

.regenerateIndividualButton:hover:not(:disabled) {
    background: #1557b0;
}

.regenerateIndividualButton svg {
    flex-shrink: 0;
}

/* Disabled states */
button:disabled {
    opacity: 0.5;
    cursor: not-allowed;
}

/* Poof animation when suggestion is accepted */
.poof {
    animation: poofAnimation 0.6s ease-out forwards;
}

@keyframes poofAnimation {
    0% {
        opacity: 1;
        transform: scale(1);
    }
    30% {
        opacity: 1;
        transform: scale(1.05);
    }
    50% {
        opacity: 0.8;
        transform: scale(0.95) translateY(-5px);
    }
    70% {
        opacity: 0.4;
        transform: scale(0.8) translateY(-10px);
        filter: blur(2px);
    }
    100% {
        opacity: 0;
        transform: scale(0.5) translateY(-20px);
        filter: blur(5px);
        pointer-events: none;
    }
}

/* Responsive */
@media (max-width: 768px) {
    .modal {
        width: 100%;
        height: 100%;
        max-height: 100vh;
        border-radius: 0;
    }
    
    .mappingDisplay {
        flex-direction: column;
        gap: 8px;
    }
    
    .arrow {
        transform: rotate(90deg);
    }
    
    .batchActions {
        flex-direction: column;
        gap: 12px;
        align-items: stretch;
    }
    
    .actionButtons {
        justify-content: center;
        flex-wrap: wrap;
    }
}
/* Loading More Indicator */
.loadingMoreIndicator {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 12px;
    padding: 24px;
    background: linear-gradient(135deg, rgba(29, 114, 243, 0.1) 0%, rgba(29, 114, 243, 0.05) 100%);
    border-radius: 8px;
    margin-top: 16px;
    font-size: 14px;
    color: #1d72f3;
    font-weight: 500;
    animation: pulseLoad 2s ease-in-out infinite;
}

@keyframes pulseLoad {
    0%, 100% {
        opacity: 1;
        transform: scale(1);
    }
    50% {
        opacity: 0.9;
        transform: scale(1.01);
    }
}

.loadingMoreIndicator .spinner {
    width: 20px;
    height: 20px;
}

.remainingCount {
    font-size: 12px;
    color: #8895b0;
    font-weight: 400;
}

/* Delete Button */
.deleteButton {
    padding: 8px 12px;
    border-radius: 6px;
    border: 1px solid #ff6b6b;
    background: white;
    color: #ff6b6b;
    font-size: 14px;
    cursor: pointer;
    transition: all 0.2s;
    display: flex;
    align-items: center;
    justify-content: center;
}

.deleteButton:hover:not(:disabled) {
    background: #ff6b6b;
    color: white;
}

.deleteButton:disabled {
    opacity: 0.5;
    cursor: not-allowed;
}

.deleteButton svg {
    width: 18px;
    height: 18px;
}

/* Remaining Count Indicator */
.remainingIndicator {
    color: #1d72f3;
    font-weight: 600;
}
